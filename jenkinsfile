pipeline {
    agent  { label 'slave2'}

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage(copyProject) {
            steps {
                sh 'git clone https://github.com/gshashidhar/java-mvn-hello-world-web-app.git'
                sh 'cd java-mvn-hello-world-web-app'
                sh 'pwd'
            }
        }
         stage(Clean) {
            steps {
                echo 'Clean Old build'
                sh 'mvn clean'
            }
        }
         stage(InstallProcess) {
  steps {
                echo 'Build teh war file'
                sh 'mvn install'
            }
        }
    }
}
