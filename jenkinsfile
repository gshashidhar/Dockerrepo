pipeline {
    agent  { label 'slave2'}

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage(copyProject) {
            steps {
                sh 'cd /home/slave2/'
                sh 'git clone https://github.com/gshashidhar/java-mvn-hello-world-web-app.git'
                sh 'pwd'
                sh 'cd mavenproject'
            }
        }
        stage(InstallProcess) {
  steps {
                echo 'Build teh war file'
                sh 'mvn install'
            }
        }
    }
}
